{
  "openapi": "3.0.0",
  "info": {
    "title": "API de cadastro de usuários",
    "description": "Api para cadastro simples de usuários",
    "version": "1.0.0",
    "contact": {
      "email": "kleber@kleberfreire.dev"
    }
  },

  "components": {
    "schemas": {
      "user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "9fe22905-8ca1-48e7-bdcb-1f9cbfa1348b"
          },
          "name": {
            "type": "string",
            "example": "joaquimteste"
          },
          "email": {
            "type": "string",
            "example": "joaquimteste@gmail.com"
          },
          "created_at": {
            "type": "string",
            "example": "2022-01-17T12:18:30.424Z"
          },
          "updated_at": {
            "type": "string",
            "example": "2022-01-17T12:18:41.076Z"
          },
          "admin": {
            "type": "boolean",
            "example": false
          }
        }
      }
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["user"],
        "summary": "Criação de usuários",
        "description": "Cria um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "joaquimteste",
                  "email": "joaquimteste@gmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operacão realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/user"
                }
              }
            }
          }
        },
        "400": {
          "description": "Mensagem do erro",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "example": "Mensagem do error"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["user"],
        "summary": "Listar todos usuários",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],

        "content": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "description": "Updated name of the pet",
                "type": "string"
              },
              "status": {
                "description": "Updated status of the pet",
                "type": "string"
              }
            },
            "required": ["status"]
          }
        },
        "responses": {
          "200": {
            "description": "Pet updated.",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          },
          "405": {
            "description": "Method Not Allowed",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          }
        },
        "security": [
          {
            "petstore_auth": ["write:pets", "read:pets"]
          }
        ]
      }
    }
  }
}
